{
    "files.associations": {
        "*.yml": "ansible",
        "*.yaml" : "ansible"
    },
    "[ansible]": {
        "gitlens.codeLens.scopes": [
            "document"
        ],
        
        "editor.detectIndentation": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.quickSuggestions": {
            "comments": true,
            "other": true,
            "strings": true
        }
    },
    "ansible.ansibleLint.enabled" : false
}